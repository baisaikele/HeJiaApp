            android:layout_marginLeft="@dimen/qb_px_16"
            android:background="@color/white_f2f2f2" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt_tuichu_setting"
                android:layout_width="@dimen/qb_px_179"
                android:layout_height="@dimen/qb_px_40"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/qb_px_24"
                android:background="@drawable/text_bangding_shouji"
                android:text="@string/setting_tuichu"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>

