<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_0"
            android:layout_weight="1">

            <FrameLayout
                android:id="@+id/fl_main_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </FrameLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/qb_px_4"
            android:background="@color/black_F5F5F5"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/ll_mian_tab1"
                android:layout_width="@dimen/qb_px_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_main_tab1"
                    style="@style/main_tab_img"
                    android:background="@drawable/main_fumu" />

                <TextView
                    android:id="@+id/tv_main_tab1"
                    style="@style/main_tab_tv"
                    android:layout_below="@id/image_main_tab1"
                    android:text="@string/main_tab_yuansheng" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_mian_tab2"
                android:layout_width="@dimen/qb_px_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_main_tab2"
                    style="@style/main_tab_img"
                    android:background="@drawable/main_xinsheng" />

                <TextView
                    android:id="@+id/tv_main_tab2"
                    style="@style/main_tab_tv"
                    android:layout_below="@id/image_main_tab2"
                    android:text="@string/main_tab_xinsheng" />


                <ImageView
                    android:id="@+id/iv_ren_tab2"
                    android:layout_width="@dimen/qb_px_8"
                    android:layout_height="@dimen/qb_px_8"
                    android:layout_alignRight="@id/image_main_tab2"
                    android:layout_marginTop="@dimen/qb_px_5"
                    android:src="@drawable/text_bangding_shouji"
                    android:visibility="gone" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_mian_tab3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/image_main_tab3"
                    style="@style/main_tab_img"
                    android:background="@drawable/main_xinsheng"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_main_tab3"
                    style="@style/main_tab_tv"
                    android:text="@string/main_tab_xinsheng"
                    android:visibility="gone" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ll_mian_tab4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_main_tab4"
                    style="@style/main_tab_img"
                    android:background="@drawable/main_dongtai" />

                <TextView
                    android:id="@+id/tv_main_tab4"
                    style="@style/main_tab_tv"
                    android:layout_below="@id/image_main_tab4"
                    android:text="@string/main_tab_dongtai" />

                <ImageView
                    android:id="@+id/iv_ren_tab4"
                    android:layout_width="@dimen/qb_px_8"

                    android:layout_height="@dimen/qb_px_8"
                    android:layout_alignRight="@id/image_main_tab4"
                    android:layout_marginTop="@dimen/qb_px_5"
                    android:src="@drawable/text_bangding_shouji"
                    android:visibility="gone" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ll_mian_tab5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_main_tab5"
                    style="@style/main_tab_img"
                    android:background="@drawable/main_wode" />

                <TextView
                    android:id="@+id/tv_main_tab5"
                    style="@style/main_tab_tv"
                    android:layout_below="@id/image_main_tab5"
                    android:text="@string/main_tab_mine" />

                <ImageView
                    android:id="@+id/iv_ren_tab5"
                    android:layout_width="@dimen/qb_px_8"
                    android:layout_height="@dimen/qb_px_8"
                    android:layout_alignRight="@id/image_main_tab5"
                    android:layout_marginTop="@dimen/qb_px_5"
                    android:src="@drawable/text_bangding_shouji"
                    android:visibility="gone" />


            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_money"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/qb_px_71"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_zhibo"
            android:layout_width="@dimen/qb_px_51"
            android:layout_height="@dimen/qb_px_51"
            android:background="@drawable/main_zhibo" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_zhibo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/qb_px_5"
            android:text="@string/main_tab_juhui"
            android:textColor="@color/tv_maintab"
            android:textSize="8sp" />
    </RelativeLayout>
</RelativeLayout>
